INGESTION_MAX_FILE_SIZE=1048576

# Search Configuration
SEARCH_DEFAULT_MAX_RESULTS=50
SEARCH_CACHE_TIMEOUT_SECONDS=60

# Logging Configuration
LOG_LEVEL=info

