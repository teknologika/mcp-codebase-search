# Embedding Model Configuration
EMBEDDING_MODEL_NAME=Xenova/all-MiniLM-L6-v2
EMBEDDING_CACHE_PATH=~/.codebase-memory/models

# Fastify Server Configuration
SERVER_PORT=8008
SERVER_HOST=localhost

# Ingestion Configuration
